{{# each films }}
    <div class="row">
        {{# each this }}
		<a href="/{{this.id}}">
                <div class="thumbnail" >
                    <img src="{{ this.img }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }} ({{this.date}})</h3>
                        <p class="date">{{ this.genre }}</p>
                        <div class="clearfix">
                            <div class="price pull-right">Ocena: {{ this.rate }}</div>
                        </div>
                    </div>
                </div>
		</a>
        {{/each}}
    </div>
{{/each}}