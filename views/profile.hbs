 <div class="container bootstrap snippet">
	<div class="row">
    	<div class="col-sm-9">
		
     
          <div class="tab-content">
            <div class="tab-pane active" id="home">
                
                  <form class="form" action="/profile" method="post" id="registrationForm">
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="first_name"><h4>First name</h4></label>
                              <input type="text" class="form-control" name="first_name" id="first_name" value="{{user.fname}}" title="enter your first name if any.">
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                            <label for="last_name"><h4>Last name</h4></label>
                              <input type="text" class="form-control" name="last_name" id="last_name" value="{{user.lname}}" title="enter your last name if any.">
                          </div>
                      </div>

                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="phone"><h4>Phone</h4></label>
                              <input type="phone" class="form-control" name="phone" id="phone" value="{{user.phone}}" title="enter your phone.">
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
						  <br></br>
                              <label for="wallet"><h4>Wallet: {{user.wallet}}PLN</h4></label>
                          </div>
                      </div>
                     
                      <div class="form-group">
						{{#if hasErrors}}
							<div class="alert alert-danger">
								{{# each messages }}
								<p>{{this}}</p>
								{{/each}}
							</div>
						{{/if}}
                           <div class="col-xs-12">
                                <br>
								<input type="hidden" name="_csrf" value="{{ csrfToken }}">
                              	<button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                            </div>
                      </div>
              	</form>
				<form class="form1" action="/add20" method="post">
					
					<input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <button class="btn2 pull-right" type="submit">20</button>
				</form>
				<form class="form2" action="/add50" method="post">
					<input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <button class="btn3 pull-right" type="submit">50</button>
				</form>
              
              
             </div><!--/tab-pane-->
             <div class="tab-pane" id="messages">
               
               <h2></h2>
               
               
             
          </div><!--/tab-content-->


        </div><!--/col-9-->
		
    </div><!--/row-->
</div>